<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#404040"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.game_4_in_a_row.Game_history">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:id="@+id/textView_history"
        android:text="@string/textView_history"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/history_table"
        android:layout_below="@+id/textView_history"
        android:layout_marginTop="15dp"
        >

        <TableRow
            android:id="@+id/row1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#ffee00">

            <TextView
                android:textAlignment="center"
                android:text="Name"
                />
            <TextView
                android:textAlignment="center"
                android:text="Win"
                android:gravity="right"
                android:padding="10dp"
                />
            <TextView
                android:textAlignment="center"
                android:text="Losses"
                android:gravity="right"
                />
            <TextView
                android:textAlignment="center"
                android:text="Standoff"
                android:gravity="right"
                android:padding="10dp"
                />
            <TextView
                android:textAlignment="center"
                android:text="win%"
                android:paddingRight="1dp"
                android:gravity="right" />
        </TableRow>

        <View
            android:layout_height="3dip"
            android:layout_width="fill_parent"
            android:background="#ff0000"/>

        <TableRow
            android:id="@+id/row2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#eeff00">
            <TextView

                android:id="@+id/Text_View_Name"
                android:text="avi"
                android:layout_gravity="left"
                />
            <TextView
                android:textAlignment="center"
                android:text="5"
                android:id="@+id/Text_View_win"
                android:gravity="center"
                 />
            <TextView
                android:textAlignment="center"
                android:text="1"
                android:id="@+id/Text_View_loss"
                android:gravity="center"
                android:visibility="visible" />
            <TextView
                android:textAlignment="center"
                android:id="@+id/Text_View_standoff"
                android:gravity="center"
                android:text="20000" />
            <TextView
                android:textAlignment="center"
                android:text="67%"
                android:id="@+id/Text_View_Percent"
                android:layout_gravity="right"
                />

        </TableRow>

    </TableLayout>


</RelativeLayout>
